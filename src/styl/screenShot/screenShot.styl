@import '../common'

.screenShot
    background-color: #eff0f0
    padding-top: 50px
    padding-bottom: 30px

    // トップ表示
    .top
        width: 100%
        height: 100px
        background-color: #ffffff // TODO:背景一枚絵
        padding-top: 70px
        font-size: 35px

    ._tab-group
        display: flex
        border-bottom: 2px solid #151c4b
        justify-content: space-between
        align-items: center
        font-size: clamp(12px, 5vw, 45px)
        margin: 50px 0 0 0
        padding: 0 15% 0 15%
        ._tab-item
            width: 40%
            border: 2px solid #151c4b
            border-bottom: none
            border-top-left-radius: 15px 
            border-top-right-radius: 15px 
            background-color: #eff0f0
            color: #151c4b
        ._select
            background-color: #5a7a9a
            color: #eff0f0
    
    ._picture-list
        display: flex
        flex-wrap: wrap
        text-align: left
        ._picture-list-elem-wrapper
            width: 90%
            aspect-ratio: 16 / 9
            border: 2px solid #151c4b
            margin: 20px 0 0 5%
            padding: auto
            img
                width: 100%
                height: 100%
                display: block
                object-fit: contain
                pointer-events: none
        ._share-button
            width: 40%
            margin: 20px 0 0 30%
            font-size: clamp(12px, 4vw, 30px)
            border-radius: 10px
            font-family: "Zen Maru Gothic", sans-serif