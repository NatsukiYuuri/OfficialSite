.main-page
    // 各ページ遷移ボタン
    .page-links
        width 94%
        background-color: #D4E1E8
        margin: 0 3% 0 3%
        border-radius: 20px
        border: 5px solid #63768D
        ._common
            padding: 30px 50px 30px 50px
            ._about-me
                display: flex
                margin-bottom: 30px
                a
                    width: 100%
                    img
                        width: 100%
                        object-fit: contain
                        border-radius: 15px
                        border: 2px solid #000000
            ._etc
                display: flex
                justify-content: space-between
                align-items: center
                a
                    width: 30%
                    aspect-ratio: 1 / 1
                    border-radius: 15px
                    border: 2px solid #000000
        ._special
        ._game
            height: 100px
            background-color: #8398A2
            margin: 20px 0 20px 0
            padding: 30px 50px 30px 50px