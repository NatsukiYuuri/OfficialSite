@import 'page-links';

.main-page
    padding-top: 30px
    padding-bottom: 530px
    background-color: #b5d7e6

    text-align: center
    font-family: "Zen Maru Gothic", sans-serif
    font-weight: 500
    font-style: normal
    button
        font-family: "Zen Maru Gothic", sans-serif
        font-weight: 600px
        font-style: normal
        font-size: 22px

    // トップ表示
    .top
        width: 100%
        height: 200px
        background-color: #cbf7ff // TODO:背景一枚絵
        margin: 0 0 30px 0

    // メッセージ・シェア・リンク集
    .welcome
        width: 100%
        h2
            width: 92%
            border-bottom: 2px solid #76778c
            margin-left: 4%
        ._X-share-with-tag
            width: 120px
            height: 60px
        ._sns_links
            margin: 20px 0 20px 0
            display: flex
            justify-content: center
            align-items: center
            button
                width: 80px
                height: 80px