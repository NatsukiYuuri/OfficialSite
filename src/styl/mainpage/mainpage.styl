@import '../common'
@import 'page-links'

.main-page
    padding-bottom: 530px
    background-color: #D9EFF9
    color: #323c48

    button
        font-family: "Zen Maru Gothic", sans-serif
        font-weight: 600px
        font-style: normal
        font-size: 22px

    // トップ表示
    .top
        width: 100%
        height: 200px
        background-color: #ffffff // TODO:背景一枚絵
        margin-top: 50px // ヘッダー分の調整
        padding-top: 150px
        font-size: 35px

    // メッセージ・シェア・リンク集
    .welcome
        width: 100%
        h2
            width: 92%
            border-bottom: 2px solid #6A7F9B
            margin-left: 4%
        ._X-share-with-tag
            width: 120px
            height: 60px
        ._sns_links
            width: 80%
            margin: 20px 0 20px 10%
            display: flex
            justify-content: space-between
            align-items: center
            a
                width: 20%
                aspect-ratio: 1 / 1
                padding: 0
                display: inline-flex
                background-color: #6A7F9B
                border: 2px solid #000000
                img
                    margin: 5% 5%
                    width: 90%
                    height: 90%
                    object-fit: contain
                span
                    width: 100%
                    text-align: center
                    margin-top: 50%
                    transform: translate(0, -50%)
                    font-size: 20px
                    font-weight: 500
                    color: #ffffff