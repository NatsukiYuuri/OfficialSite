
// メニュー
.menu
    position: fixed
    width: 100%
    height: 100%
    top: 0
    left: 0
    background-color: #151c4b
    display: none
    z-index: 1001
    ._moon
        position: absolute
        right: 9px
        top: 9px
        width: 32px
        height: 32px
        background-color: #eff0f0
        border-radius: 50%

    ._1
    ._2
    ._3
    ._4
    ._5
    ._6
    ._7
        position: absolute
        color: #eff0f0
        text-wrap-mode: nowrap
        line-height: 50px
        span
            display: inline-block
            text-align: left
            font-size: clamp(25px, 7vw, 45px)
            font-family: "Moon Dance", cursive
            line-height: 0.9em
            border-bottom: 1px solid #eff0f0
    ._1
        top: 15%
        left: 35%
    ._2
        top: 28%
        left: 40%
    ._3
        top: 35%
        left: 37%
    ._4
        top: 45%
        left: 35%
    ._5
        top: 53%
        left: 25%
    ._6
        top: 71%
        left: 35%
    ._7
        top: 63%
        left: 45%

svg.lines
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;

polyline 
  fill: none;
  stroke: #ffffff;
  stroke-width: 1;
  stroke-dasharray: 1000;     /* 線の長さ（後でJSで正確に設定） */
  stroke-dashoffset: 1000;
  animation: draw 3s ease-in-out forwards;

@keyframes draw 
    to
        stroke-dashoffset: 0;
  
