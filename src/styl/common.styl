@import 'menu'

body
    max-width: 750px
    margin: 0 auto
    text-align: center
    font-family: "Zen Maru Gothic", sans-serif
    font-weight: 500
    font-style: normal
    user-select: none
    a
        text-decoration: none

#cursor-circle
    position: fixed
    width: 15px
    height: 15px
    border-radius: 50%
    background-color: navy
    pointer-events: none // クリックを無視する
    transform: translate(-50%, -50%)
    z-index: 9999
    display: none // 取得できなかった時は非表示にする

// ヘッダー
.header
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 50px
    background-color: #5a7a9a
    z-index: 1000
    #menu-open-btn
        position: absolute
        right: 10px
        top: 10px
        width: 30px
        height: 30px
        &:hover ._moon
            margin: 3px 0 0 10px
            width: 22px
            height: 22px
            box-shadow: -6px 1px 0 5px #eff0f0
    ._moon
        width: 100%
        height: 100%
        background-color: transparent
        border-radius: 50%
        box-shadow: 0px 0px 0 1px #eff0f0

// フッター
.footer
    width: 100%
    height: 60px
    background-color: #5a7a9a

// フォント
.zen-maru-gothic-regular
  font-family: "Zen Maru Gothic", sans-serif;
  font-weight: 400
  font-style: normal