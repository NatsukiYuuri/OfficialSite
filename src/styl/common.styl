body
    margin: 0

#cursor-circle
    position: fixed
    width: 15px
    height: 15px
    border-radius: 50%
    background-color: navy
    pointer-events: none // クリックを無視する
    transform: translate(-50%, -50%)
    z-index: 9999
    display: none // 取得できなかった時は非表示にする

// ヘッダー
.header
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 50px
    background-color: #76778c
    z-index: 1000
// フッター
.footer
    width: 100%
    height: 60px
    background-color: #76778c

// フォント
.zen-maru-gothic-regular
  font-family: "Zen Maru Gothic", sans-serif;
  font-weight: 400
  font-style: normal