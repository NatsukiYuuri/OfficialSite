@import '../common'


.login_stamp_card
    padding-top: 50px

    ._calendar
        width: 90%
        margin: 20px 5% 20px 5%
        border: 2px solid #151c4b
        border-radius: 10px 10px 0 0
        ._header
            width: 100%
            height: 50px
        ._days
            width: calc(100% + 1px)
            display: flex
            flex-wrap: wrap
            ._day
                position: relative
                display: block
                margin-left: -1px
                margin-top: -1px
                width: calc((100% / 7) - 1px)
                aspect-ratio: 1 / 0.9
                border: 1px solid #151c4b
                background-color: #ffffff
                img
                    position: absolute
                    top: 10%
                    left: 5%
                    width: 90%
                    height: 90%
                    object-fit: contain
            ._empty
                background-color: #afbac1