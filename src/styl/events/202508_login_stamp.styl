@import '../common'

.set-time-window
    position: fixed
    width: 100%
    height: 100%
    top: 0
    left: 0
    z-index: 1001
    background-color: rgba(34, 33, 43, 0.7)
    ._wrapper
        width: 70%
        height: 200px
        margin-top: 200px
        margin-left: 15%
        background-color: #e8e8e8
        border: 2px solid #151c4b
        align-content: center
        ._times
            margin: 0 0 10px 0
        p
            font-size: 13px
        button
            width: 25%
            background-color: #ffffff

.login_stamp_card
    padding-top: 50px

    ._calendar
        width: 90%
        margin: 20px 5% 20px 5%
        border: 2px solid #151c4b
        border-radius: 10px 10px 0 0
        ._header
            width: 100%
            height: 50px
            font-size: 25px
        ._days
            width: calc(100% + 1px)
            display: flex
            flex-wrap: wrap
            ._day
                position: relative
                display: block
                margin-left: -1px
                margin-top: -1px
                width: calc((100% / 7) - 1px)
                aspect-ratio: 1 / 0.9
                border: 1px solid #151c4b
                background-color: #ffffff
                img
                    position: absolute
                    top: 10%
                    left: 5%
                    width: 90%
                    height: 90%
                    object-fit: contain
            ._empty
                background-color: #afbac1
    ._user-datas
        width: 90%
        margin: auto
        border-bottom: 1px solid #151c4b